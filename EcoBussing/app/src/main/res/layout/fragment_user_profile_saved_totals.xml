<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spoti5.ecobussing.Profiles.UserProfileSavedTotals">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutCo2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/co2"
                android:id="@+id/imageCo2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16dp"
                android:textColor="@color/nice_green"
                android:text="58 kg"
                android:id="@+id/textCo2"
                android:layout_below="@id/imageCo2"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <View style="@style/Divider_Vertical"
            android:layout_toRightOf="@id/layoutCo2"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:id="@+id/dividerCo2"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutDistance"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/bus"
                android:id="@+id/imageDistance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16dp"
                android:textColor="@color/nice_green"
                android:text="321 km"
                android:id="@+id/textDistance"
                android:layout_below="@id/imageDistance"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <View style="@style/Divider_Vertical"
            android:layout_toRightOf="@id/layoutDistance"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:id="@+id/dividerDistance"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutMoney"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/placeholder_dollah_dollah_bill"
                android:id="@+id/imageMoney" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16dp"
                android:textColor="@color/nice_green"
                android:text="12 000 kr!"
                android:id="@+id/textMoney"
                android:layout_below="@id/imageMoney"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
