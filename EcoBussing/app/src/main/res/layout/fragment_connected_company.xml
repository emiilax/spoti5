<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="Här ser du vilket företag du är kopplad till!"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/imageViewComp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/textViewCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="New Text"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/buttonShowProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Visa företagsprofil"
        android:layout_gravity="center_horizontal"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="25dp"
        android:textColor="@color/nice_green" />

    <Button
        android:id="@+id/buttonDisconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Gå ur företag"
        android:layout_gravity="center_horizontal"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="25dp"
        android:textColor="@color/nice_green" />
</LinearLayout>