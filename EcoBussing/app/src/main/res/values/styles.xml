<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">#77d264</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="android:colorAccent" tools:targetApi="lollipop">#FF4081</item>
        <!-- colorControlActivated is used for the colour when a textfield is chosen-->
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/nice_green</item>
        <!-- You can also set colorControlNormal,
             colorControlHighlight and colorSwitchThumbNormal. -->
    </style>
</resources>